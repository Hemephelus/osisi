{
  "compilerOptions": {
    "baseUrl":".",
    "paths":{
//add paths line                          
       "@routes/*":[
          "src/routes/*"
       ],
       "@hooks/*":[
          "src/hooks/*"
       ],
       "@assets/*":[
          "src/assets/*"
       ],
       "@context/*":[
          "src/context/*"
       ],
       "@components/*":[
          "src/components/*"
       ],
       "@utils/*":[
          "src/utils/*"
       ],
       "@stores/*":[
          "src/stores/*"
       ]
    },

   //  "paths": {
   //    "@/*": [
   //      "./src/*"
   //    ],
   //  },
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }],
}
